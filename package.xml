 <name>Gtk2_FileDrop</name>
 <channel>pear.php.net</channel>
 <summary>Make Gtk widgets accept file drops</summary>
 <description>
  A class which makes it easy to make a GtkWidget accept
  the dropping of files or folders
 </description>

 <lead>
  <name>Christian Weiske</name>
  <user>cweiske</user>
  <email>cweiske@php.net</email>
  <active>yes</active>
 </lead>

 <date>2006-05-16</date>

 <version>
  <release>0.1.1</release>
  <api>0.1.1</api>
 </version>
 <stability>
  <release>beta</release>
  <api>beta</api>
 </stability>

 <license uri="http://www.php.net/license">PHP License</license>
 <notes>
  * Fixed warning in MIME_Type
 </notes>
 <contents>
  <dir name="/" baseinstalldir="Gtk2">
   <file name="FileDrop.php" role="php"/>
   <dir name="examples">
    <file name="example.phpw" role="doc"/>
    <file name="big_example.phpw" role="doc"/>
   </dir>
  </dir>
 </contents>

 <dependencies>
  <required>
   <php>
    <min>5.1</min>
    <max>5.999.999</max>
   </php>
   <pearinstaller>
    <min>1.4.1</min>
   </pearinstaller>
   <package>
    <name>MIME_Type</name>
    <channel>pear.php.net</channel>
    <min>1.0.0</min>
   </package>
   <extension>
    <name>php-gtk</name>
    <min>2.0.0dev</min>
   </extension>
  </required>
 </dependencies>

